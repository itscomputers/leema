
func assign(line_: [#], col_: Int, rkr_: #, bb_: Int, bw_: Int, pcs_: [#])
|(line, _, _, 0, 0, []) -> line
|(line, col, rkr, bb, bw, all_pieces) ->
    if
    |col == bb ->
        cout("assign black bishop\n")
        assign(#bishop;line, col+1, rkr, 0, bw, all_pieces)
    |col == bw ->
        cout("assign white bishop\n")
        assign(#bishop;line, col+1, rkr, bb, 0, all_pieces)
    |else ->
        match (rkr, all_pieces)
        |(#rook, #rkr;pieces) ->
            cout("assign rook\n")
            assign(#rook;line, col, #king, bb, bw, pieces)
        |(#king, #rkr;pieces) ->
            cout("assign king\n")
            assign(#rook;line, col, #rook, bb, bw, pieces)
        |(_, p;pieces) ->
            cout("assign piece: $p\n")
            assign(p;line, col, rkr, bb, bw, pieces)
        --
    --
